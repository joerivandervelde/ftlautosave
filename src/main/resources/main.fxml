<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainBox" prefHeight="640.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.synogen.ftlautosave.ui.MainController">
  <children>
      <BorderPane>
         <center>
            <ListView fx:id="savesList" editable="true" prefHeight="1000.0" prefWidth="380.0" BorderPane.alignment="CENTER" />
         </center>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
         <bottom>
            <FlowPane alignment="CENTER" hgap="5.0" prefHeight="0.0" prefWidth="200.0" vgap="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="refresh" mnemonicParsing="false" onAction="#refreshSavesList" text="Refresh list" />
                  <Button fx:id="restore" mnemonicParsing="false" onAction="#restoreSave" text="Restore selected save" />
                  <Button fx:id="restoreAndStart" mnemonicParsing="false" onAction="#restoreAndStartFtl" text="Restore selected save and start FTL" />
               </children>
            </FlowPane>
         </bottom>
      </BorderPane>
  </children>
</VBox>
